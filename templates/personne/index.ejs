<%- include('../header.ejs') %>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center">
    <h1 class="my-5">Update infos:</h1>

    <% if (success == 1) { %>
        <p style="font-weight: bold;">DATA UPDATED !</p>
    <% } %>

    <% if (success === 0) { %>
        <p style="font-weight: bold;">ERROR!</p>
    <% } %>
  
    <form method="POST" action="/personne/<%= name %>" class="d-flex flex-column justify-content-center w-25">
        <input type="text" name="username" placeholder="Nom.." value="<%= name %>" />
        <select name="genre" value="<%= genre %>">
            <option disabled>Choisir un genre</option>
            <option value="F"> Femme </option>
            <option value="M"> Homme</option>
        </select>
        <input type="submit" value="Valider" />
    </form>
</div>
</body>
</html>