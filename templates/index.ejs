<%- include('./header.ejs') %>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center">
    <% if (!error) { %>
        <h1 class="my-5">Welcome User: <%= user %> Gender: <%= gender %></h1>
    <%} else { %>
            <h1>Error <%= error %></h1>
    <% } %>

    <% if (success == 1) { %>
        <p style="font-weight: bold;">DATA ADDED !</p>
    <% } %>

    <% if (success === 0) { %>
        <p style="font-weight: bold;">ERROR!</p>
    <% } %>
  <h2>Add a user</h2>
    <form method="POST" action="/personne" class="d-flex flex-column justify-content-center w-25">
        <input type="text" name="username" placeholder="Nom.." />
        <select name="genre">
            <option disabled>Choisir un genre</option>
            <option value="F"> Femme </option>
            <option value="M"> Homme</option>
        </select>
        <input type="submit" value="Valider" />
    </form>

    <h2 class=" my-5">User list</h2>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Genre</th>
            </tr>
        </thead>
        <% for (el of list) { %>
            <tr>
                <td><a href="/personne/<%= el.name %>"><%= el.name %></a></td>
                <td><%= el.genre %></td>
            </tr>
        <% } %>
    </table>
   
</div>
    </body>
</html>